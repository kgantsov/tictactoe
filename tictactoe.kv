#:kivy 1.0.9


<TicTacToeGameGrid>:
    xo_cell_0: xo_cell_0
    xo_cell_1: xo_cell_1
    xo_cell_2: xo_cell_2
    xo_cell_3: xo_cell_3
    xo_cell_4: xo_cell_4
    xo_cell_5: xo_cell_5
    xo_cell_6: xo_cell_6
    xo_cell_7: xo_cell_7
    xo_cell_8: xo_cell_8
    with_ai_switch: with_ai_switch
    complexity_spiner: complexity_spiner

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'

        BoxLayout:
            padding: 10
            spacing: 10
            height: 50
            size_hint: 1, None

            Label:
                text: 'complexity'
                height: 50

            Spinner:
                id: complexity_spiner
                text: 'Hard'
                values: 'Hard', 'Normal', 'Easy'

            Label:
                text: 'With computer'
                height: 50

            Switch:
                id: with_ai_switch
                active: True
                height: 50

        BoxLayout:
            padding: 10
            spacing: 10
            orientation: 'horizontal'

            Button:
                id: xo_cell_0
                text: ''
                on_press: root.click(0)
                border: 0,0,0,0
                background_normal: 'images/blank.png'
                background_down: 'images/down.png'

            Button:
                id: xo_cell_1
                text: ''
                on_press: root.click(1)
                border: 0,0,0,0
                background_normal: 'images/blank.png'
                background_down: 'images/down.png'

            Button:
